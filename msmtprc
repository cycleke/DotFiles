defaults
auth           on
tls            on
logfile        ~/.msmtp.log

account gmail
  auth login
  host smtp.gmail.com
  port 587
  proxy_host 127.0.0.1
  proxy_port 1080
  from XXX@gmail.com
  user XXX@gmail.com
  password ""
  tls on
  tls_starttls on
  tls_certcheck off

account hotmail
  auth on
  host smtp.office365.com
  port 587
  from XXX@hotmail.com
  user XXX@hotmail.com
  password ""
  tls on
  tls_starttls on
  tls_certcheck off

logfile /tmp/msmtp.log
account default : gmail
